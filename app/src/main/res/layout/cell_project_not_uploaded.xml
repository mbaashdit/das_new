<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#364F6B"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_cam_not_upload"
                    app:tint="#364F6B" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/img_upload"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/cv_map"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <views.MonSemiBold
                android:textColor="@color/white"
                android:id="@+id/tv_project_name"
                android:text="Project name : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                />


            <views.MonSemiBold
                android:textColor="@color/white"
                android:id="@+id/tv_agency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agency : " />

            <views.MonSemiBold
                android:textColor="@color/white"
                android:id="@+id/tv_uc_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last UC Submition date : " />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_upload"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_img_upload">

        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>