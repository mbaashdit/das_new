<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <views.MonBold
            android:id="@+id/tv_project_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Project : "
            android:textColor="#FC5185" />

        <views.MonBold
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv_project_name_lbl"
            android:text=" Amrabti Basagruha Prakalpa Amrabti Basagruha Prakalpa Amrabti Basagruha Prakalpa Amrabti Basagruha Prakalpa Amrabti Basagruha Prakalpa"
            android:textColor="#364F6B" />

        <views.MonSemiBold
            android:id="@+id/tv_agency_name_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_project_name_lbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Agency : "
            android:textColor="#FC5185" />


        <views.MonSemiBold
            android:id="@+id/tv_agency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_project_name_lbl"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv_agency_name_lbl"
            android:text="Maa Shakti Boula Kali sangh"
            android:textColor="#B8364F6B" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_agency_name"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/cv_map"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>