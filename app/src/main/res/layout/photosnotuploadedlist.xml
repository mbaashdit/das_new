<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="3dp"
        android:paddingEnd="3dp">

        <views.MonSemiBold
            android:id="@+id/tendername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tender ID"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <views.MonSemiBold
                android:layout_alignParentStart="true"
                android:id="@+id/tv_pid_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Project id" />

            <views.MonRegular
                android:id="@+id/tenderprojectid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tv_pid_lbl"
                android:gravity="end"
                android:maxLines="10"
                android:padding="10dp"
                android:text="Project id" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <views.MonSemiBold
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="10dp"
                android:id="@+id/tv_agency_lbl"
                android:text="Agency Name : " />

            <views.MonRegular
                android:id="@+id/tenderagencyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:maxLines="10"
                android:padding="10dp"
                android:layout_toEndOf="@+id/tv_agency_lbl"
                android:gravity="end"
                android:text="Agency Name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <views.MonSemiBold
                android:id="@+id/tv_pname_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="Project Name : " />

            <views.MonRegular
                android:layout_toEndOf="@+id/tv_pname_lbl"
                android:gravity="end"
                android:id="@+id/tenderprojectname"
                android:layout_width="wrap_content"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="Project Name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <views.MonSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tender Code : " />

            <views.MonRegular
                android:id="@+id/tendercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="Tender Code" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <views.MonSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_pcode_lbl"
                android:text="Project code : " />

            <views.MonRegular
                android:id="@+id/tenderprojectcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_pcode_lbl"
                android:gravity="end"
                android:maxLines="10"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="Project code" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5FCFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <views.MonSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="10dp"
                    android:text="Date : " />

                <views.MonRegular
                    android:id="@+id/tenderaggrementDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="8dp"
                    android:text="Date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <views.MonSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="10dp"
                    android:text="Amount : " />

                <views.MonRegular
                    android:id="@+id/tenderaggrementValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="8dp"
                    android:text="Amount" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <views.MonSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="10dp"
                    android:text="Timeline : " />

                <views.MonRegular
                    android:id="@+id/tendertimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="8dp"
                    android:text="Timeline" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/uploadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/buttoncolor"
            android:text="Upload"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
